<%= are_you_sure_form_for(@entry) do |f| %>
  <%= f.confirmation message: 'この内容でよろしいですか？' %>

  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field_or_confirm :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area_or_confirm :body %>
  </div>
  <div class="field">
    <%= f.label :published %><br>
    <%= f.check_box_or_confirm :published %>
  </div>
  <div class="field">
    <%= f.label :deadline %><br>
    <%= f.datetime_select_or_confirm :deadline, { order: [:year, :month, :day] } %>
  </div>
  <div class="actions">
    <%= f.submit_or_confirm create: '投稿する', update: '編集する', confirm: '確認する' %>
    <%= f.cancel 'やめる', class: :button %>
  </div>
<% end %>
